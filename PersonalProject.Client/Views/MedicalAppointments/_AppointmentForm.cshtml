@using PersonalProject.Data.DTO
@model PatientsAppointmentDTO

<div class="modal fade" id="appointmentModal" tabindex="-1" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Patients Appointments</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <form id="appointmentForm" onsubmit="return false;">
                                <input asp-for="IdPatientsAppointments" hidden>
                                <div class="form-group">
                                    <label asp-for="IdPatient" class="control-label"></label>
                                    <select asp-for="IdPatient" class ="form-control">

                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AssignationDate" class="control-label"></label>
                                    <input asp-for="AssignationDate" class="form-control" />
                                    <span asp-validation-for="AssignationDate" class="text-danger"></span>
                                </div>
                                <div class="form-group text-end">
                                    <input type="submit" value="Create" class="btn btn-primary" id="btnSaveAppointment" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>