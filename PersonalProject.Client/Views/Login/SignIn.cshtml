@using PersonalProject.Data.DTO
@model UserDTO
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link rel="stylesheet" href="~/css/signIn.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="~/js/waitMe/waitMe.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
</head>
<body>
    <div class="regForm">
        <form action="" id="frmUser" onsubmit="return false;">
            <h3>Registration Form</h3>
            <div class="row">
                <div class="col">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" type="text" class="form-control">
                    <span asp-for="Fir" />
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" type="text" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" type="text" class="form-control">
                </div>
                <div class="col">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="Rol"></label>
                    <input asp-for="Rol" type="text" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col d-flex justify-content-end">
                    <button class="btn btn-primary" id="btnSaveUser">Sign In</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
<script src="~/js/waitMe/waitMe.js"></script>
<script src="~/js/site.js"></script>
<script src="~/js/authenticate/signIn.js"></script>