@model PersonalProject.Data.DTO.EmployeeDTO
<div class="modal fade" id="employeeFormModal" tabindex="-1" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Employee Registration</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <form onsubmit="return false;" id="employeeForm">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-5">
                                        <div class="form-group">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-7">
                                        <div class="form-group">
                                            <label asp-for="LastName" class="control-label"></label>
                                            <input asp-for="LastName" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label asp-for="Birthday" class="control-label"></label>
                                            <input asp-for="Birthday" type="date" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label asp-for="Gender" class="control-label"></label>
                                            <select asp-for="Gender" class="form-control">
                                                <option value="">Select...</option>
                                                <option value="M">Male</option>
                                                <option value="F">Female</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-5">
                                        <div class="form-group">
                                            <label asp-for="PhoneNumber" class="control-label"></label>
                                            <input asp-for="PhoneNumber" type="text" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Scholarity" class="control-label"></label>
                                    <select asp-for="Scholarity" class="form-control">
                                        <option value="">Select...</option>
                                        <option value="K">KinderGarten</option>
                                        <option value="S">Elementary School</option>
                                        <option value="M">Middle School</option>
                                        <option value="H">High School</option>
                                        <option value="U">University</option>
                                        <option value="p">Postgraduate </option>
                                    </select>
                                </div>
                                <input asp-for="IdAddress" type="text" hidden/>
                                @{await Html.RenderPartialAsync("_AddressModal.cshtml");}
                                <div class="form-group text-end">
                                    <button type="submit" class="btn btn-primary" id="btnSaveEmployee">Save Employee</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>