@model PersonalProject.Data.DTO.PatientDTO

<div class="modal fade" id="patientFormModal" tabindex="-1" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitleId">Patient Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <form id="patientForm" onsubmit="return false;">
                                <input asp-for="IdPatient" type="text" hidden/>
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="LastName" class="control-label"></label>
                                    <input asp-for="LastName" class="form-control" />
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="Birthday" class="control-label"></label>
                                            <input asp-for="Birthday" type="date" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="Gender" class="control-label"></label>
                                            <select asp-for="Gender" class="form-control">
                                                <option value="">Select...</option>
                                                <option value="M">Male</option>
                                                <option value="F">Female</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                @{await Html.RenderPartialAsync("/Views/Login/_AddressModal.cshtml");}
                                <div class="form-group text-end">
                                    <input type="submit" value="Save Patient" class="btn btn-primary" id="btnSavePatient" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>